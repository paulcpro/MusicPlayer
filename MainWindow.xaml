<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:ccontrols="clr-namespace:MusicPlayer.Custom_Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1080" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="Transparent"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="Transparent"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="menuButtonTemplate" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="Transparent">
        <Border Background="#0D122F" CornerRadius="20">
            <Grid>

                <!-- TODO -->
                <!--
                - Ajuster tous les boutons et endroit cliquable
                  Il faudra mettre les margins sur les Grids
                  Et non directement dans les Elements (Ex: Button)
                  Afin d'éviter que ça clique sur le bouton + la marge de décalage
                -->
                <!-- Style Structure -->

                <!-- Global Structure -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <!-- Left Menu Structure -->
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <!-- Add Resizing buttons -->
                    <!-- Explore Menu -->
                    <TextBlock Text="Menu" Foreground="#4D5A88" HorizontalAlignment="Left" Margin="10, 45, 15, 5"/>
                    <Grid HorizontalAlignment="Left" Margin="15, 5, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/007-controller.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Daily Mix" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10,0,0,0" />
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/002-music.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Songs" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10,0,0,0"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/020-menu.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Playlists" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10,0,0,0"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/026-recording-1.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Radio" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10,0,0,0"/>
                    </Grid>
                    <!-- End of Explore Menu -->

                    <!-- Playlists Menu -->
                    <TextBlock Text="Playlists" Margin="10, 30, 15, 5" Foreground="#4D5A88" Grid.Column="0" Grid.Row="1"/>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/036-rate.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Style1" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10, 0, 0,0"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/036-rate.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Style2" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10, 0, 0,0"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15, 10, 15, 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="./Assets/036-rate.png" Width="15" Stretch="Uniform"/>
                        <TextBlock Grid.Column="1" Text="Style2" FontSize="12" Foreground="#D2D2D2" TextAlignment="Left" Margin="10, 0, 0,0"/>
                    </Grid>
                    <!-- End of Playlists Menu-->
                </StackPanel>
                <Grid Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="15,10,15,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <ccontrols:MediumMusicDisplayer ImageSource="./Assets/folder.jpg" FirstBlockText="Davodka" SecondBlockText="Ligne de conduite" Foreground="White"/>
                </Grid>
                <!-- End of the left menu structure -->

                <!-- Main Content -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Background="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="429*"/>
                                <ColumnDefinition Width="429*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Bar -->
                            <StackPanel Orientation="Horizontal" Height="30" Grid.Row="0" Margin="40,10,5,0" Grid.ColumnSpan="2">
                                <Image VerticalAlignment="Center" Source="./Assets/006-loop-1.png" Width="15" Height="20"/>
                                <TextBlock VerticalAlignment="Center" Text="Search songs, albums, artist and playlists..." FontSize="12" Foreground="#4C567E" Background="Transparent" Height="20" Margin="10,0 ,0,0"/>
                                <!-- ImageSource / Text / ImageSource -->
                                <StackPanel Orientation="Horizontal" Margin="500,0,0,0">
                                    <Image Source="./Assets/Profile.png" Height="20"/>
                                    <TextBlock Text="Ring0" Margin="10, 0, 0, 0" FontSize="14" Foreground="White" Height="20"/>
                                    <Image />
                                    <!-- Ajouté une icone fleche -->
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- New album -->
                    <TextBlock Text="Nouvel album disponible" FontSize="12" Foreground="White" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,20,0,10" Grid.ColumnSpan="2" Background="#0E1848">
                        <TextBlock Text="Random" FontSize="12" Foreground="White"/>
                        <StackPanel>
                            <TextBlock Text="Mise au poing new album" FontSize="34" Foreground="White"/>
                            <Border BorderThickness="10" CornerRadius="15">
                                <Button Content="PLAY HERE" FontSize="16" Background="Transparent" Foreground="White" Margin="10,20,10,10"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Pictures with buttons of the artist" FontSize="12" Foreground="White"/>
                    </StackPanel>

                    <!-- Playlists Selected -->
                    <TextBlock Text="Playlists selected for you" FontSize="12" Foreground="#4C567E" Grid.Row="2" Grid.ColumnSpan="2" Background="#0D1436"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10,25,0,0" Grid.ColumnSpan="2" Background="#0D1436">
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White"/>
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White" Margin="25,0,25,0"/>
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White" Margin="25,5,25,0"/>
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White" Margin="25,5,25,0"/>
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White" Margin="25,5,25,0"/>
                        <ccontrols:HighMusicDisplayer ImageSource="./Assets/folder.jpg" AlbumName="Mise au poing" SongsNumber="200 Songs" Foreground="White"/>
                    </StackPanel>

                    <!-- Artits Liked -->
                    <TextBlock Grid.Row="3" FontSize="12" Foreground="White" Text="Artists you may like" Grid.ColumnSpan="2" Background="#0D1436"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,20,0,10" Grid.ColumnSpan="2" Background="#0D1436">
                        <ccontrols:HighCircularArtist ImageSource="./Assets/davodka.jpg" ArtistName="Davodka" Foreground="White" FontSize="14" Margin="10,10,0,0"/>
                        <ccontrols:HighCircularArtist ImageSource="./Assets/davodka.jpg" ArtistName="Davodka" Foreground="White" FontSize="14" Margin="15,10,25,0"/>
                        <ccontrols:HighCircularArtist ImageSource="./Assets/davodka.jpg" ArtistName="Davodka" Foreground="White" FontSize="14" Margin="15,10,25,0"/>
                        <ccontrols:HighCircularArtist ImageSource="./Assets/davodka.jpg" ArtistName="Davodka" Foreground="White" FontSize="14" Margin="15,10,25,0"/>
                        <ccontrols:HighCircularArtist ImageSource="./Assets/davodka.jpg" ArtistName="Davodka" Foreground="White" FontSize="14" Margin="15,10,25,0"/>
                    </StackPanel>
                </Grid>

                <!-- Music In Listen -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <Grid Margin="15" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Height="20" Style="{DynamicResource menuButtonTemplate}">
                                <Button.Content>
                                    <Image Source="./Assets/025-shuffle.png" Stretch="Uniform" Width="15" />
                                </Button.Content>
                            </Button>
                            <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Height="25" Style="{DynamicResource menuButtonTemplate}">
                                <Button.Content>
                                    <Image Source="./Assets/011-back.png" Stretch="Uniform" Width="20" Height="20"/>
                                </Button.Content>
                            </Button>
                            <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Height="45" Style="{DynamicResource menuButtonTemplate}">
                                <Button.Content>
                                    <Image Source="./Assets/013-play.png" Stretch="Uniform" Width="35"/>
                                </Button.Content>
                            </Button>
                            <Button Grid.Column="3" Background="Transparent" BorderThickness="0" Height="25" Style="{DynamicResource menuButtonTemplate}">
                                <Button.Content>
                                    <Image Source="./Assets/001-next.png" Stretch="Uniform" Width="20"/>
                                </Button.Content>
                            </Button>
                            <Button Grid.Column="4" Background="Transparent" BorderThickness="0" Height="20" Style="{DynamicResource menuButtonTemplate}">
                                <Button.Content>
                                    <Image Source="./Assets/006-loop-1.png" Stretch="Uniform" Width="15"/>
                                </Button.Content>
                            </Button>
                        </Grid>

                        <TextBox Text="00:00" Margin="35,0,10,0" VerticalAlignment="Center" BorderThickness="0" Background="Transparent" Foreground="White"/>
                        <Slider Width="300" VerticalAlignment="Center"/>
                        <TextBox Text="03:45" Margin="10,0,0,0" Background="Transparent" BorderThickness="0" Foreground="White" VerticalAlignment="Center"/>

                        <Grid Margin="110,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Grid.Row="5" Background="Transparent" BorderThickness="0" Height="20">
                                <Button.Content>
                                    <Image Source="./Assets/034-volume-adjustment.png" Stretch="Uniform" Width="20" VerticalAlignment="Center"/>
                                </Button.Content>
                            </Button>
                            <Slider Grid.Column="1" Width="100" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                <!-- End of Music in listen -->
            </Grid>
        </Border>
    </Border>
</Window>
