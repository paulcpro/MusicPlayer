<UserControl x:Class="MusicPlayer.Custom_Controls.MediumMusicDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ccontrols="clr-namespace:MusicPlayer.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Transparent">
            <Border Grid.Column="0" Background="White" Height="40" Width="40" CornerRadius="10">
                <Image x:Name="MainImage" Source="{Binding Path=ImageSource}" />
            </Border>
        </Border>
        <StackPanel Margin="10, 10, 5, 5" Grid.Column="1">
            <TextBlock x:Name="FirstTextBlock" Text="{Binding Path=FirstBlockText}" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="SecondTextBlock" Text="{Binding Path=SecondBlockText}" FontWeight="SemiBold" FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
